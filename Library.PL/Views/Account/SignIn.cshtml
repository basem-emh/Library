@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn">
			<div asp-validation-summary="ModelOnly"></div>
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox" required="">
					@* <span>I Agree To The Terms & Conditions</span> *@
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGN IN">
		</form>
		<p>If you don't have an Account? <a asp-action="SignUp"> Sign UP Now!</a></p>
		<p><a class="my-3" asp-action="ForgetPassword"> Forget Password !</a></p>
	</div>
</div>


@section validationScript {
	<partial name="_ValidationScriptsPartial" />
}