@model BookDetailsDto
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Book Details</h1>
<br />
<br />
<div class="row align-items-center justify-content-center">
    <div class="text-center">
        <img src="~/files/images/@Model.Image" class="img-fluid" style="height:18rem;width:18rem;  object-fit:cover;" alt="Book Image">
    </div>
</div>

<!-- Bootstrap Tabs -->
<ul class="nav nav-tabs" id="bookTabs" role="tablist">

    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">
            General
        </a>
    </li>

    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">
            Administration
        </a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">

    <!-- General Tab Content -->

    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general">
        <div class="row">

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Title"></label>
                <input asp-for="Title" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Author"></label>
                <input asp-for="Author" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Department"></label>
                <input asp-for="Department" class="form-control" readonly />
            </div>
            
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="PublicationYear"></label>
                <input asp-for="PublicationYear" class="form-control" readonly />
            </div>

            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" readonly></textarea>
            </div>

        </div>
    </div>

    <!-- administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration">
        <div class="row">

            <div class="form-group col-12">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" readonly />
            </div>

            <div class="form-group col-12">
                <label class="col-form-label" asp-for="CreateOn"></label>
                <input asp-for="CreateOn" class="form-control" readonly />
            </div>

            <div class="form-group col-12">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" readonly />
            </div>

            <div class="form-group col-12">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" readonly />
            </div>

        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To list </a>

    </div>
</div>